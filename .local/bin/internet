#!/bin/sh

# Show wifi W and percent strength or n if none.
# Show E if connected to ethernet or Xe if none.
# Show V if a vpn connection is active

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "I Internet module" "\- Click to connect
X: wifi disabled
n: no wifi connection
W: wifi connection with quality
Xe: no ethernet
E: ethernet working
V: vpn is active
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

if grep -xq 'up' /sys/class/net/w*/operstate 2>/dev/null ; then
	wifiicon="$(awk '/^\s*w/ { print "W", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
elif grep -xq 'down' /sys/class/net/w*/operstate 2>/dev/null ; then
	grep -xq '0x1003' /sys/class/net/w*/flags && wifiicon="n " || wifiicon="X "
fi

printf "%s%s%s\n" "$wifiicon" "$(sed "s/down/Xe/;s/up/I/" /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/V/" /sys/class/net/tun*/operstate 2>/dev/null)"
